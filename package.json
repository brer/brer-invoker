{
  "private": true,
  "name": "brer-invoker",
  "version": "0.0.0",
  "description": "Invoker component for Brer project",
  "type": "module",
  "scripts": {
    "clean": "rimraf *.tsbuildinfo build",
    "build": "npm run clean && tsc -p ./tsconfig.build.json",
    "start": "npm run clean && npm run watch:build && npm run watch:start",
    "test": "ava",
    "watch": "npm run clean && nodemon -w src -e ts --exec 'npm run watch:build && npm run watch:start'",
    "watch:build": "tsc --incremental -p ./tsconfig.build.json",
    "watch:start": "node --inspect -r source-map-support/register -r dotenv/config build/start.js dotenv_config_path=$npm_config_env"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.21.0",
    "close-with-grace": "^1.3.0",
    "jose": "^5.3.0",
    "pino": "^9.1.0",
    "undici": "^6.18.2"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "^20.12.13",
    "ava": "^6.1.3",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "tsx": "^4.10.1",
    "typescript": "^5.4.5"
  },
  "ava": {
    "typescript": {
      "compile": "tsc",
      "rewritePaths": {
        "src/": "src/"
      }
    }
  }
}
